{
    "swagger": "2.0",
    "info": {
        "description": "API untuk sistem reservasi lapangan olahraga Diro",
        "title": "Diro API",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "API Support",
            "url": "http://www.swagger.io/support",
